<h3 style="margin-top: 40px">Code View</h3>

@code {
    [Parameter] public string[] Code { get; set; }
    [Parameter] public int SelectedLine { get; set; }
}

<p class="code">
    @for (int i = 0; i < Code.Length; i++)
    {
        int numTabs = Code[i].TakeWhile(Char.IsWhiteSpace).Count();
        <span style="margin-left: @(10*numTabs)px; background-color: @((i == SelectedLine)?"coral":"white")">@Code[i]</span>
        <br />
    }
</p>